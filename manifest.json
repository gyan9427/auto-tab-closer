{
    "manifest_version": 3,
    "name": "Auto Tab Closer",
    "version": "1.0",
    "description": "Automatically closes tabs after a specified duration.",
    "permissions": [
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    }
}