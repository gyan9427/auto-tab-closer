{
    "manifest_version": 3,
    "name": "Auto Tab Closer",
    "version": "1.1",
    "description": "Closes inactive tabs with customizable timeout",
    "permissions": ["tabs", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["./css/styles.css"]
      }
    ],
    "host_permissions": ["<all_urls>"]
  }
  